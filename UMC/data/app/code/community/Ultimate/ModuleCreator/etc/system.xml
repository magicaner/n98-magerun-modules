<config>
    <tabs>
        <umc translate="label" module="modulecreator">
            <label>Ultimate Module Creator</label>
            <sort_order>500</sort_order>
        </umc>
    </tabs>
    <sections>
        <modulecreator translate="label" module="modulecreator">
            <class>separator-top</class>
            <label>Ultimate Module Creator</label>
            <tab>umc</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="modulecreator">
                    <label>General settings</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <help translate="title comment" module="modulecreator">
                            <label>Enable help tab</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>After you get the hang of it you can disable the help tab to make it a little faster.</comment>
                        </help>
                        <tooltips translate="title comment" module="modulecreator">
                            <label>Show field tooltips</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>After you get the hang of it you can disable the field tooltips to make it a little faster.</comment>
                        </tooltips>
                        <collapsed translate="title" module="modulecreator">
                            <label>Show entity fieldsets expanded</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </collapsed>
                    </fields>
                </general>
                <settings translate="label" module="modulecreator">
                    <label>Default module settings</label>
                    <frontend_model>modulecreator/adminhtml_modulecreator_system_config_form_fieldset_settings</frontend_model>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </settings>
                <entity translate="label" module="modulecreator">
                    <label>Default entity settings</label>
                    <frontend_model>modulecreator/adminhtml_modulecreator_system_config_form_fieldset_entity</frontend_model>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </entity>
                <attribute translate="label" module="modulecreator">
                    <label>Default attribute settings</label>
                    <frontend_model>modulecreator/adminhtml_modulecreator_system_config_form_fieldset_attribute</frontend_model>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </attribute>
            </groups>
        </modulecreator>
    </sections>
</config>
